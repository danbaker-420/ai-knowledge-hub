    <!-- Confluence Fix: Removed Modal Pop-up Div and JavaScript functions -->

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInputs = document.querySelectorAll('#desktop-search-input, #mobile-search-input');
            const sections = document.querySelectorAll('.content-section');
            /* Confluence Fix: Using generic selectors to handle all content types */
            const cardsAndRows = document.querySelectorAll('.card, .ai-tool-card, .slack-list li, .responsive-table tbody tr');
            
            /* Confluence Fix: The fixed header container is no longer truly fixed, so setting this height is less critical, but we keep the logic clean. */
            const fixedHeaderContainer = document.querySelector('.fixed-header-container');


            // --- Collapsible Logic Function (STABLE INSTANT TOGGLE) ---
            const toggleSection = (section, header, content, icon, open) => {
                // Feature: AI Unlocked is permanently open and should be ignored by the toggle logic
                if (section.id === 'ai-unlocked-podcast') return;

                const isCollapsed = section.classList.contains('collapsed');
                
                // SAFETY CHECK: Ensure icon element exists before accessing its textContent
                if (icon) {
                    if (open !== undefined) {
                        // Force state
                        if (open) {
                            section.classList.remove('collapsed');
                            icon.textContent = '-';
                        } else {
                            section.classList.add('collapsed');
                            icon.textContent = '+';
                        }
                    } else {
                        // Toggle state
                        if (isCollapsed) {
                            section.classList.remove('collapsed');
                            icon.textContent = '-';
                        } else {
                            section.classList.add('collapsed');
                            icon.textContent = '+';
                        }
                    }
                } else {
                    // If no icon, just toggle collapsed state based on open status
                    if (open !== undefined) {
                        if (open) {
                            section.classList.remove('collapsed');
                        } else {
                            section.classList.add('collapsed');
                        }
                    } else {
                         // Default toggle logic without icon
                         section.classList.toggle('collapsed');
                    }
                }
            }


            // --- 1. Collapsible Sections Initial Setup & Click Listener (Kept) ---
            sections.forEach(section => {
                const header = section.querySelector('.section-header');
                const content = section.querySelector('.section-content');
                const icon = section.querySelector('.icon');
                const defaultState = header.dataset.defaultState; 

                // Skip toggle setup for the featured section
                if (section.id === 'ai-unlocked-podcast') {
                    // Manually ensure content is visible
                    section.classList.remove('collapsed');
                    return;
                }

                // Apply initial state based on data-default-state attribute
                setTimeout(() => {
                    // Start everything collapsed by default
                    const shouldOpen = defaultState === 'open'; // Check if default is explicitly 'open' (only true for one section)
                    if (!shouldOpen) {
                        section.classList.add('collapsed');
                        if (icon) icon.textContent = '+';
                    } else {
                        section.classList.remove('collapsed');
                        if (icon) icon.textContent = '-';
                    }
                    
                }, 50);

                header.addEventListener('click', () => {
                    toggleSection(section, header, content, icon);
                });
            });
            
            // --- 2. RELIABLE ANCHOR / SCROLL HANDLER FOR CONFLUENCE (FIXED) ---
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    const href = this.getAttribute('href');

                    if (href.length > 1 && href.startsWith('#')) {
                        e.preventDefault();
                        const targetId = href.substring(1);
                        const targetElement = document.getElementById(targetId);

                        if (targetElement) {
                            // Manually scroll into view using the browser API
                            targetElement.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start' 
                            });

                            // Optionally push state to update URL hash without full reload
                            if (href !== '#home') {
                                history.pushState(null, null, href);
                            } else {
                                // For #home, clear hash without SecurityError
                                history.pushState(null, null, window.location.pathname + window.location.search);
                            }
                        }
                    }
                });
            });


            // --- 3. Synchronized & Dynamic Search Filtering (Fixed for robust search) ---
            const filterContent = (searchTerm) => {
                const query = searchTerm.toLowerCase().trim();

                cardsAndRows.forEach(item => {
                    let content = '';
                    let itemDisplay = 'none'; // Default to hiding the item
                    
                    // --- Case 1: Filterable Card (Regular card or AI Tool/Slack icon card) ---
                    if (item.classList.contains('card') || item.classList.contains('ai-tool-card') || item.tagName === 'LI') {
                        
                        // SAFETY FIX: Robustly check for nested elements before accessing their content
                        const searchData = item.dataset ? item.dataset.searchTerm || '' : ''; 
                        const descTextElement = item.querySelector('.tool-description-text');
                        const spanElement = item.querySelector('span');

                        const description = descTextElement ? descTextElement.textContent : '';
                        const spanText = spanElement ? spanElement.textContent : '';
                        const cardBodyText = item.textContent || '';
                        
                        // Combine and check
                        content = (searchData + ' ' + cardBodyText + ' ' + description + ' ' + spanText).toLowerCase();

                        if (content.includes(query)) {
                            // Ensure list items (LI) and cards display correctly
                            itemDisplay = item.tagName === 'LI' ? 'flex' : 'flex'; 
                        }
                    // --- Case 2: Filterable Table Row (TR element) ---
                    } else if (item.tagName === 'TR') {
                        content = item.textContent.toLowerCase();
                        
                        if (content.includes(query)) {
                            itemDisplay = 'table-row'; 
                        }
                    }
                    
                    // Apply the final display style
                    item.style.display = itemDisplay;
                });
            };

            searchInputs.forEach(input => {
                input.addEventListener('input', (e) => {
                    const searchTerm = e.target.value;

                    // Synchronize the other input field
                    searchInputs.forEach(otherInput => {
                        if (otherInput !== e.target) {
                            otherInput.value = searchTerm;
                        }
                    });

                    filterContent(searchTerm);
                });
            });

            // --- 4. Fixed Header Visibility/Spacing Adjustment (Modified for Confluence) ---
            const updateFixedSpacerHeight = () => {
                const spacer = document.getElementById('fixed-spacer');
                /* Confluence Fix: We set the total height to 0 to prevent issues where Confluence incorrectly adds its own top padding */
                document.documentElement.style.setProperty('--total-fixed-height', `0px`);
            };

            updateFixedSpacerHeight();
            window.addEventListener('resize', updateFixedSpacerHeight);
        });
    </script>
</body>
</html>

