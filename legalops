    <!-- ---------------------------------------------------- -->
    <!-- JAVASCRIPT LOGIC (Dropdown and Collapsible Handlers) -->
    <!-- ---------------------------------------------------- -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInputs = document.querySelectorAll('#desktop-search-input, #mobile-search-input');
            const sections = document.querySelectorAll('.content-section');
            const cardsAndRows = document.querySelectorAll('.card, .ai-tool-card, .slack-list li, .responsive-table tbody tr');
            
            // --- Dropdown Logic (Click/Tap Handler) ---
            
            // FIX: Removed complex max-height calculation. Using simple class toggling
            // combined with CSS to reliably show/hide the content instantly.
            
            const setupDropdowns = () => {
                // Select all elements that are root containers for dropdowns
                document.querySelectorAll('.nav-link-item').forEach(root => {
                    const trigger = root.querySelector('.dropdown-trigger');
                    const dropdown = root.querySelector('.nav-dropdown');

                    // Only set up listeners for elements that actually have a dropdown
                    if (trigger && dropdown) {
                        // Ensure initial state is hidden via JS for safety, though CSS also helps
                        dropdown.style.display = 'none';
                        root.classList.remove('open'); 

                        trigger.addEventListener('click', function(event) {
                            event.stopPropagation();
                            const isOpening = !root.classList.contains('open');

                            if (isOpening) {
                                // OPENING: Use display property for instant, reliable open
                                root.classList.add('open');
                                dropdown.style.display = 'flex'; 
                                
                            } else {
                                // CLOSING: Use display property for instant, reliable close
                                root.classList.remove('open');
                                dropdown.style.display = 'none';
                            }
                        });
                        
                        // Close dropdown on outside click
                        document.addEventListener('click', function(event) {
                            if (root.classList.contains('open') && !root.contains(event.target)) {
                                root.classList.remove('open');
                                dropdown.style.display = 'none';
                            }
                        });
                    }
                });
            };
            
            setupDropdowns();
            // --- End Dropdown Logic ---


            // --- Collapsible Logic Function (STABLE INSTANT TOGGLE) ---
            const toggleSection = (section, header, content, icon, open) => {
                if (section.id === 'ai-unlocked-podcast') return;
                const isCollapsed = section.classList.contains('collapsed');
                
                if (icon) {
                    if (open !== undefined) {
                        if (open) {
                            section.classList.remove('collapsed');
                            icon.textContent = '‚àí'; // Minus sign
                        } else {
                            section.classList.add('collapsed');
                            icon.textContent = '+'; // Plus sign
                        }
                    } else {
                        if (isCollapsed) {
                            section.classList.remove('collapsed');
                            icon.textContent = '‚àí'; // Minus sign
                        } else {
                            section.classList.add('collapsed');
                            icon.textContent = '+'; // Plus sign
                        }
                    }
                } else {
                    if (open !== undefined) {
                        if (open) {
                            section.classList.remove('collapsed');
                        } else {
                            section.classList.add('collapsed');
                        }
                    } else {
                         section.classList.toggle('collapsed');
                    }
                }
                
                if (content) {
                     if (section.classList.contains('collapsed')) {
                        content.style.display = 'none';
                    } else {
                        content.style.display = 'block';
                    }
                }
            }


            // --- 1. Collapsible Sections Initial Setup & Click Listener (Kept) ---
            sections.forEach(section => {
                const header = section.querySelector('.section-header');
                const content = section.querySelector('.section-content');
                const icon = section.querySelector('.icon');
                const defaultState = header.dataset.defaultState; 

                if (section.id === 'ai-unlocked-podcast') {
                    section.classList.remove('collapsed');
                    if (content) content.style.display = 'block'; 
                    return;
                }

                setTimeout(() => {
                    const shouldOpen = defaultState === 'open';
                    if (!shouldOpen) {
                        section.classList.add('collapsed');
                        if (icon) icon.textContent = '+';
                        if (content) content.style.display = 'none'; 
                    } else {
                        section.classList.remove('collapsed');
                        if (icon) icon.textContent = '‚àí'; // Minus sign
                        if (content) content.style.display = 'block';
                    }
                    
                }, 50);

                header.addEventListener('click', () => {
                    toggleSection(section, header, content, icon);
                });
            });
            
            // --- 2. RELIABLE ANCHOR / SCROLL & OPEN HANDLER (UPDATED) ---
            document.querySelectorAll('.sidenav a[href^="#"], #fixed-top-nav a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    const href = this.getAttribute('href');
                    const targetId = href.substring(1);
                    
                    if (href.length > 1 && href.startsWith('#')) {
                        e.preventDefault();
                        const targetElement = document.querySelector(href);
                        
                        if (targetElement) {
                            
                            // 1. SCROLL TO SECTION
                            const mainContentWrapper = document.querySelector('.main-content-wrapper');
                            
                            // Use native scrollIntoView and leverage scroll-padding-top set in CSS
                            targetElement.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });

                            // 2. OPEN THE SECTION
                            const sectionToOpen = document.getElementById(targetId);
                            if (sectionToOpen && sectionToOpen.classList.contains('content-section')) {
                                const isCollapsed = sectionToOpen.classList.contains('collapsed');
                                
                                // Only toggle if it is currently collapsed
                                if (isCollapsed) {
                                    const header = sectionToOpen.querySelector('.section-header');
                                    const content = sectionToOpen.querySelector('.section-section');
                                    const icon = sectionToOpen.querySelector('.icon');
                                    
                                    toggleSection(sectionToOpen, header, content, icon, true); // Force open
                                }
                            }
                        }
                    }
                });
            });


            // --- 3. Synchronized & Dynamic Search Filtering (Fixed for robust search) ---
            const filterContent = (searchTerm) => {
                const query = searchTerm.toLowerCase().trim();

                if (!query) {
                     sections.forEach(section => {
                        const header = section.querySelector('.section-header');
                        const content = section.querySelector('.section-content');
                        const icon = section.querySelector('.icon');
                        const defaultState = header.dataset.defaultState; 

                        if (section.id !== 'ai-unlocked-podcast') {
                            if (defaultState !== 'open') {
                                section.classList.add('collapsed');
                                if (icon) icon.textContent = '+';
                                if (content) content.style.display = 'none'; 
                            }
                        }

                    });
                    
                    cardsAndRows.forEach(item => {
                        item.style.display = 'flex';
                    });
                    
                    return;
                }

                let sectionsToOpen = new Set();
                
                cardsAndRows.forEach(item => {
                    let content = '';
                    let itemDisplay = 'none';
                    
                    if (item.classList.contains('card') || item.classList.contains('ai-tool-card')) {
                        const searchData = item.dataset ? item.dataset.searchTerm || '' : ''; 
                        const cardBodyText = item.textContent || '';
                        content = (searchData + ' ' + cardBodyText).toLowerCase();

                        if (content.includes(query)) {
                            itemDisplay = 'flex'; 
                            let parentSection = item.closest('.content-section');
                            if (parentSection) {
                                sectionsToOpen.add(parentSection.id);
                            }
                        }
                    }
                    
                    item.style.display = itemDisplay;
                });
                
                sections.forEach(section => {
                    const header = section.querySelector('.section-header');
                    const content = section.querySelector('.section-content');
                    const icon = section.querySelector('.icon');
                    
                    if (section.id === 'ai-unlocked-podcast') return;
                    
                    if (sectionsToOpen.has(section.id)) {
                        section.classList.remove('collapsed');
                        if (icon) icon.textContent = '‚àí'; // Minus sign
                        if (content) content.style.display = 'block';
                    } else {
                        section.classList.add('collapsed');
                        if (icon) icon.textContent = '+'; // Plus sign
                        if (content) content.style.display = 'none';
                    }
                });
            };

            searchInputs.forEach(input => {
                input.addEventListener('input', (e) => {
                    const searchTerm = e.target.value;
                    searchInputs.forEach(otherInput => {
                        if (otherInput !== e.target) {
                            otherInput.value = searchTerm;
                        }
                    });
                    filterContent(searchTerm);
                });
            });
            
            // --- NEW: Scroll to Top Button Handler ---
            document.querySelectorAll('.back-to-top-scroll').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const homeAnchor = document.getElementById('home');
                    if (homeAnchor) {
                        homeAnchor.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
            // 4. Fixed Header Visibility/Spacing Adjustment (Removed as position:sticky handles it now)
        });
    </script>
</body>
</html>
